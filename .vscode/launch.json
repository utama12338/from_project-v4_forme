{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js Debug (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack://_N_E/./*": "${webRoot}/*"
      }
    },
    {
      "name": "Next.js Debug (Attach)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "sourceMaps": true,
      "timeout": 30000,
      "outFiles": ["${workspaceFolder}/.next/**/*.js"],
      "autoAttachChildProcesses": true
    }
  ]
}
